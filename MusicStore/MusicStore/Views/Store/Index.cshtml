@model IEnumerable<MusicStore.Models.Genre>

@{
    ViewBag.Title = "Store";
}

<h3>Browse Genres</h3>

<p>
    select from @Model.Count() genres:
</p>

<ul>
    @foreach (var genre in Model)
    {
        <li>
            @*<a href="/Store/Browse?genre=@genre.Name"> @genre.Name</a> *@
            @Html.ActionLink(genre.Name, "Browse", new { genre = genre.Name })
        </li>
    }
</ul>